<% provide(:title, @title) %>

<% @notes.each do |note| %>
  <div class="row entry-overview">
    <div class="span2 date"><%= raw format_timestamp(note[:created]).split.join('<br/>') %></div>
    <div class="span7">
      <strong><%= link_to(note[:title], note_path(created: note[:created]/1000, trailing_slash: true)) %></strong>
      <br/><%= note[:snippet] %> ...
    </div>
  </div>
<% end %>